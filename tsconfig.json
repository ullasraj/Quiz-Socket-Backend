{
	"compilerOptions": {
		"target": "es6",
		"preserveConstEnums": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"sourceMap": true,
		"lib": ["es6", "dom"],
		"module": "commonjs",
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"declaration": true,
		"outDir": "./dist"
	},

	"exclude": ["node_modules"]
}
